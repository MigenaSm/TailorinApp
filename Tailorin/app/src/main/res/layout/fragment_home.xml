<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almostWhite"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimaryLight"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/title_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:text="Our Courses"
                android:textColor="@color/primaryText"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Check it out!"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:layout_below="@id/title_medium" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="124dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- In questa sezione ci stà il corso di embrodery -->
                    <LinearLayout
                        android:id="@+id/item_slide"
                        android:layout_width="300dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/bg_item"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/embrodery" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/title_course"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="34dp"
                                android:text="Embrodery"
                                android:textColor="@color/primaryText"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/title_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="6dp"
                                android:text="Learn how to digitalize"
                                android:textColor="@color/secondaryText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/title_enter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="26dp"
                                android:text="Enter"
                                android:textColor="@color/primaryText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <!-- In questa sezione ci stà il corso di disegno -->
                    <LinearLayout
                        android:id="@id/item_slide"
                        android:layout_width="300dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/bg_item"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/disegno" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@id/title_course"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="34dp"
                                android:text="Drawing"
                                android:textColor="@color/primaryText"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@id/title_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="6dp"
                                android:text="Learn how to draw propelly"
                                android:textColor="@color/secondaryText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@id/title_enter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="26dp"
                                android:text="Enter"
                                android:textColor="@color/primaryText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <!-- In questa sezione ci stà il corso di cucito -->
                    <LinearLayout
                        android:id="@id/item_slide"
                        android:layout_width="300dp"
                        android:layout_height="180dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/bg_item"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="20dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/cucito" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@id/title_course"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="34dp"
                                android:text="Sewing"
                                android:textColor="@color/primaryText"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@id/title_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="6dp"
                                android:text="Learn how to sew like a pro"
                                android:textColor="@color/secondaryText"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@id/title_enter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="24dp"
                                android:layout_marginTop="26dp"
                                android:text="Enter"
                                android:textColor="@color/primaryText"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/title_light2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:text="You might like"
                android:textFontWeight="44"
                android:textColor="@color/primaryText"
                android:textSize="16sp"
                android:layout_below="@id/horizontalScrollView2"/>

            <!--  da qui inizia doveva iniziare lo scroll layout  -->

            <RelativeLayout
                android:layout_below="@id/title_light2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/might_like1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_might_like"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/moda" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/title_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="28dp"
                            android:text="Fashion Designer"
                            android:textColor="@color/primaryText"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@id/title_description"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:text="Learn how to be a fashion designer"
                            android:textColor="@color/secondaryText"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/might_like2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/bg_might_like"
                    android:orientation="horizontal"
                    android:layout_below="@id/might_like1">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cucito" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/title_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="28dp"
                            android:text="Fashion Designer"
                            android:textColor="@color/primaryText"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@id/title_description"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:text="Learn how to be a fashion designer"
                            android:textColor="@color/secondaryText"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/might_like3"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bg_might_like"
                    android:orientation="horizontal"
                    android:layout_below="@id/might_like2">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/camicie" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/title_course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="28dp"
                            android:text="Fashion Designer"
                            android:textColor="@color/primaryText"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@id/title_description"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="6dp"
                            android:text="Learn how to be a fashion designer"
                            android:textColor="@color/secondaryText"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>